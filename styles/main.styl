@import "tooltips"

// spain flag: 
$yellow = #FECB00
$red = #FE0000

body
  width: 680px
  font-family: Helvetica
  font-size: 20px
  line-height: 1.8
  margin: 0 auto
  background: #6E91A1
  color: #111
  color: #EEE
  text-shadow: 1px 1px rgba(0,0,0,0.5)
  font-size: 18px

h1
  font-family: 'Source Sans Pro', sans-serif;
  // color: $yellow
  text-shadow: 2px 2px rgba(0,0,0,0.2)
  font-size: 38px
  margin: 60px 0 10px

.pane
  border: 1px solid rgba(0,0,0,0.3)
  padding: 20px  
  background: rgba(0,0,0,0.1)
  margin-bottom: 20px

.quiz
  display: none

label input
  margin-right: 10px

.pronoun
  float: left
  font-size: 30px
  margin-right: 20px
  line-height: 80px

.prompt
  margin-bottom: 40px
.prompts label
  display: block

.result
  font-size: 30px
  color: #CC3333
  font-weight: bold
.result.correct
  color: green

input, button
  font-size: 20px
input.response
  padding: 10px
  margin: 20px 0
  background: #467386
button
  border-radius: 2px
  border: none
  background: #022636
  padding-left: 20px 
  padding-right: 20px 
  &:hover
    background: darken(#022636, 50%)
    text-shadow: 1px 1px rgba(255,255,255,0.2)
  .fa.right // todo right/left
    margin-left: 10px
button.big
  text-transform: uppercase

.using-verbs
  position: absolute
  top: 0
  right: -100%
  width: 8%
  min-width: 200px
  // background: #467386
  background: rgba(0,0,0,0.2)
  padding: 1% 2%
  height: 100%
  overflow: scroll
  transition: right 0.2s ease
  &.active
    right: 0
.using-verbs label
  display: block

.toggle-all
  font-weight: bold

.score
  float: right

.toggle-verbs
  position: absolute
  top: 10px
  right: 10px
  cursor: pointer
  z-index: 1

nav
  position: absolute
  top: 10px
  left: 10px
  button
    float: left
    margin-right: 10px

.translate
  display: none
  h2
    margin: 0

.close-pane
  float: right
  cursor: pointer
  opacity: 0.5
  &:hover
    opacity: 1
