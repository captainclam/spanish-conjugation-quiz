body {
  width: 620px;
  font-family: Verdana;
  font-size: 20px;
  line-height: 1.8;
  margin: 0 auto;
  background: #6E91A1;
  color: #111;
  color: #EEE;
  text-shadow: 1px 1px rgba(0,0,0,0.5);
}

h1 {
  text-shadow: 4px 4px rgba(0,0,0,0.2);
  font-size: 32px
}

.pane {
  border: 1px solid #022636;
  padding: 20px;  
  // background: #27576B;
  background: rgba(0,0,0,0.1)
}

.quiz {
  display: none;
}

label input {
  margin-right: 10px;
}

.prompts {
}
.dark .prompts {
  background: #333;
}
.prompt {
  margin-bottom: 40px;
}
.prompts label {
  display: block;
}

.result {
  color: red;
}
.result.correct {
  color: green;
}

input, button {
  font-size: 30px;
}
input.response {
  padding: 10px;
  margin: 20px 0;
  background: #467386;
}
button {
  background: #022636;
}
button.big {
  min-width: 220px;
  text-transform: uppercase;
}

.using-verbs {
  position: absolute;
  top: 0;
  right: 0;
  width: 8%;
  min-width: 200px;
  background: #467386;
  padding: 1% 2%;
  height: 100%;
  overflow: scroll;
}
.using-verbs label {
  display: block;
}

.show-prompts {
  font-size: 20px;
  position: absolute;
  right: 20%;
  top: 20px;
}

.toggle-all {
  font-weight: bold;
}
